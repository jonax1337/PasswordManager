{
  "name": "simple-password-manager",
  "version": "0.0.1",
  "description": "A simple password manager inspired by KeePass",
  "main": "build/electron.js",
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=\"--no-deprecation\" concurrently --kill-others-on-fail \"npm run react-dev\" \"npm run electron-dev\"",
    "react-dev": "cross-env GENERATE_SOURCEMAP=false npx craco start",
    "electron-dev": "wait-on http://localhost:3000 && cross-env NODE_OPTIONS=\"--no-deprecation\" electron .",
    "build": "cross-env GENERATE_SOURCEMAP=false npx craco build && copy public\\electron.js build\\ && copy public\\preload.js build\\",
    "electron-build": "electron-builder",
    "dist": "npm run build && npm run electron-build",
    "start": "electron ."
  },
  "keywords": [
    "password",
    "manager",
    "security",
    "electron",
    "react"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^37.2.0",
    "electron-builder": "^24.6.4",
    "electron-is-dev": "^2.0.0",
    "fork-ts-checker-webpack-plugin": "^9.1.0",
    "react-scripts": "^5.0.1",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@craco/craco": "^7.1.0",
    "assert": "^2.1.0",
    "autoprefixer": "^10.4.16",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.1",
    "crypto-js": "^4.2.0",
    "electron-store": "^8.1.0",
    "kdbxweb": "^2.1.1",
    "lucide-react": "^0.294.0",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "postcss": "^8.4.31",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-window": "^1.8.11",
    "stream-browserify": "^3.0.0",
    "tailwindcss": "^3.3.6",
    "url": "^0.11.4",
    "util": "^0.12.5",
    "vm-browserify": "^1.1.2"
  },
  "homepage": "./",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.simplepasswordmanager.app",
    "productName": "Simple Password Manager",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "build/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "target": {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      "publisherName": "Simple Password Manager",
      "verifyUpdateCodeSignature": true
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": {
        "target": "AppImage",
        "arch": [
          "x64"
        ]
      },
      "category": "Security"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "shortcutName": "Simple Password Manager"
    },
    "fileAssociations": [
      {
        "ext": "pmdb",
        "name": "Password Manager Database",
        "description": "Simple Password Manager Database File",
        "role": "Editor",
        "icon": "assets/file.ico"
      }
    ]
  }
}
